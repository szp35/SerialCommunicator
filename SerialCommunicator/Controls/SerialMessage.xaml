<UserControl x:Class="SerialCommunicator.Controls.SerialMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             HorizontalAlignment="Stretch"
             HorizontalContentAlignment="Stretch"
             xmlns:local="clr-namespace:SerialCommunicator.Controls" 
             xmlns:viewmodels="clr-namespace:SerialCommunicator.ViewModels"
             mc:Ignorable="d" ToolTip="{Binding Time, StringFormat='hh:mm:ss tt'}">
    <Grid>
        <TextBlock Text="{Binding RXorTX, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="2,0"/>
        <TextBlock Text=">" VerticalAlignment="Center" Margin="36,4,0,4" HorizontalAlignment="Left" Width="8"/>
        <TextBox Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}"
                 TextWrapping="Wrap"
                 Background="Transparent"
                 BorderThickness="0 0 0 1"
                 IsReadOnly="True"
                 Padding="1" Margin="46,2,2,2"/>
    </Grid>
</UserControl>
